"$TERMINAL"
  Control+Mod2+Mod4 + t

"$TERMINAL --working-directory $NOTES -e $EDITOR"
  Control+Mod2+Mod4 + n

"$TERMINAL -e $FILEMANAGER"
  Control+Mod2+Mod4 + f

"$TERMINAL -e $EMAILCLIENT"
  Control+Mod2+Mod4 + e

"firefox"
  Control+Mod2+Mod4 + b

"firefox --private-window"
  Alt+Mod2+Mod4 + b

"xbindkeys"
  c:64 + m:0x8 + x

"brightnessctl set +5%"
  XF86MonBrightnessUp

"brightnessctl set 5%-"
  XF86MonBrightnessDown

"playerctl play-pause"
  XF86AudioPlay

"playerctl next"
  XF86AudioNext

"playerctl previous"
  XF86AudioPrev

"playerctl play-pause"
  Control+Mod2+Mod4 + p

"playerctl next"
  Control+Mod2+Mod4 + plus

"playerctl previous"
  Control+Mod2+Mod4 + minus

"$TERMINAL -e alsamixer"
  Alt+Mod2+Mod4 + m

"$TERMINAL -e alsamixer"
  Control+Mod2+Mod4 + a

"spotify"
  Control+Mod2+Mod4 + s

"scrot ~/screenshots/%Y-%m-%d%T-screenshot.png"
  Alt+Mod2+Mod4 + s

"discord"
  Control+Mod2+Mod4 + d

"discord"
  Control+Mod2+Mod4 + c

"$TERMINAL -e htop"
  Control + Alt + Delete  

"$TERMINAL -e htop"
  Alt+Mod2+Mod4 + t

"sudo systemctl exit"
  Control+Alt+Mod2+Mod4 + e

"sudo systemctl reboot"
  Control+Alt+Mod2+Mod4 + r

