"$TERMINAL"
  c:64 + m:0x8 + t

"$TERMINAL --working-directory $NOTES -e $EDITOR"
  c:64 + m:0x8 + n

"$TERMINAL -e $FILEMANAGER"
  c:64 + m:0x8 + f

"$TERMINAL -e $EMAILCLIENT"
  c:64 + m:0x8 + m

"firefox"
  c:64 + m:0x8 + b

"xbindkeys"
  c:64 + m:0x8 + x

"brightnessctl set +5%"
  XF86MonBrightnessUp

"brightnessctl set 5%-"
  XF86MonBrightnessDown

"playerctl play-pause"
  alt + p

"playerctl next"
  alt + plus

"playerctl previous"
  alt + minus

"$TERMINAL -e alsamixer"
  alt + Shift + m

"spotify"
  Alt+Alt_L + s

"discord"
  alt + c

"discord"
  alt + d

"$TERMINAL -e htop"
  control + alt + Delete  

